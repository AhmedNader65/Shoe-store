                            android:textColor="@color/grey"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/name2"
                            tools:text="Nike" />

                        <TextView
                            android:id="@+id/desc2"
